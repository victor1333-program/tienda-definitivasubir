# Base de datos PostgreSQL (para VPS)
DATABASE_URL="postgresql://lovilike_user:TU_PASSWORD_SEGURO_AQUI@localhost:5432/lovilike_db"

# NextAuth configuración
NEXTAUTH_URL="https://lovilike.es"
NEXTAUTH_SECRET="GENERAR_UN_SECRETO_SEGURO_DE_64_CARACTERES_MINIMO_AQUI"

# Cloudinary para manejo de imágenes
CLOUDINARY_CLOUD_NAME="tu-cloud-name"
CLOUDINARY_API_KEY="tu-api-key"
CLOUDINARY_API_SECRET="tu-api-secret"

# Configuración de Email SMTP (Hostinger)
EMAIL_FROM="noreply@lovilike.es"
EMAIL_SERVER_HOST="smtp.hostinger.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="tu-email@lovilike.es"
EMAIL_SERVER_PASSWORD="tu-password-email"

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="Lovilike Personalizados"
NEXT_PUBLIC_APP_URL="https://lovilike.es"
NODE_ENV="production"

# Configuración de servidor (opcional)
PORT="3000"
HOSTNAME="localhost"

